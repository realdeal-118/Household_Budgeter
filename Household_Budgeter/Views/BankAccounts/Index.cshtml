@model IEnumerable<Household_Budgeter.Models.BankAccount>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.HouseholdId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Created)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Balance)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.InitialBalance)
        </th>
        <th>
            Warning Balance
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ReconcileBalance)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.HouseholdId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @item.Created.ToString("D")
        </td>
        <td>
            @string.Format("{0:C}", item.Balance)
        </td>
        <td>
            @string.Format("{0:C}", item.InitialBalance)
        </td>
        <td>
            @string.Format("{0:C}", item.WarningBalance)
        </td>
        <td>
            @string.Format("{0:C}", item.ReconcileBalance)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Update", "Update", new { id = item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
