@model IEnumerable<Household_Budgeter.Models.BudgetItem>

@{
    ViewBag.Title = "Index";
}

<div class="row">
    <div class="col-md-6">
        <h2>BudgetItems Index</h2>
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Budget.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Category.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Amount)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Budget.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Category.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Amount)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                    </td>
                </tr>
            }

        </table>
    </div>
    <div class="col-md-6">
        <h2>Create</h2>
        <ul class="nav nav-tabs">
            <li class="active"><a data-toggle="tab" href="#home">BudgetItem</a></li>
            <li><a data-toggle="tab" href="#menu1">Budget</a></li>
            <li><a data-toggle="tab" href="#menu2">Categories</a></li>
        </ul>
        <div class="tab-content">
            <div id="home" class="tab-pane fade in active">
                @Html.Action("Create")
            </div>
            <div id="menu1" class="tab-pane fade">
                @Html.Action("Create", "Budgets")
            </div>
            <div id="menu2" class="tab-pane fade">
                @Html.Action("Create", "Categories")
            </div>
        </div>
    </div>
</div>
